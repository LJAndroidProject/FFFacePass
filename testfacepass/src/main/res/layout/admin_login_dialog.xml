<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:text="管理员登陆"
            android:id="@+id/admin_login_title"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center|left"
            android:paddingStart="14dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:padding="20dp"
            android:id="@+id/admin_login_close"
            android:tint="@android:color/darker_gray"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
    </LinearLayout>
    <EditText
        android:id="@+id/admin_login_edit"
        android:padding="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_margin="5dp"
        android:hint="账户"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/admin_login_password"
        android:padding="20dp"
        android:layout_margin="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="密码"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/admin_login_button"
        android:text="登陆"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:background="@drawable/control_btn_shape"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>
    <EditText
        android:visibility="gone"
        android:id="@+id/admin_verify_code"
        android:padding="20dp"
        android:layout_margin="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="密码"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:visibility="gone"
        android:id="@+id/admin_verify_button"
        android:text="验证"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:background="@drawable/control_btn_shape"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>
</LinearLayout>