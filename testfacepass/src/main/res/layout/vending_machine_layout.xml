<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/item_vendingMachineActivity_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_margin="20dp"
        android:id="@+id/item_vendingMachineActivity_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <TextView
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:padding="5dp"
        android:textSize="14sp"
        android:id="@+id/vendingMachineActivity_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#F64545"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/vendingMachineActivity_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>