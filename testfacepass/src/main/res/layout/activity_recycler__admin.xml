<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecyclerAdminActivity">
    <android.support.v7.widget.Toolbar
        app:theme="@style/MyDarkToolBarTheme"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:id="@+id/awc_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="回收桶回收"
        app:titleTextColor="@android:color/white"
        android:background="@color/colorPrimary">

    </android.support.v7.widget.Toolbar>
    <EditText
        android:layout_margin="20dp"
        android:id="@+id/ard_doorNumber_edit"
        android:padding="20dp"
        android:hint="目标箱体"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_margin="20dp"
        android:id="@+id/ard_open_button"
        android:onClick="openRecyclerDoor"
        android:layout_marginTop="20dp"
        android:text="开启回收桶"
        style="@style/themeButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>
</LinearLayout>