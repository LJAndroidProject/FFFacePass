<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WeightCalibrationActivity">
    <android.support.v7.widget.Toolbar
        app:theme="@style/MyDarkToolBarTheme"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:id="@+id/awc_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="垃圾箱重量校准"
        app:titleTextColor="@android:color/white"
        android:background="@color/colorPrimary">

    </android.support.v7.widget.Toolbar>
    <TextView
        android:padding="20dp"
        android:text="重量校准，每个桶都要校准，将重物放置到箱体内，输入该重物重量，点击按钮开始校准，及完成一次重量校准，建议两次以上校准，校准物重量递增。"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:padding="20dp"
        android:text="步骤：\n\n1.放置重物\n2.点击开始校准，等待校准完毕 \n3.放置重物 2 (建议相对第一次重物递增)\n4.再次点击校准"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/awc_weight_doorNumber"
        android:inputType="number"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:hint="桶号 ( 第几号桶 ) "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:padding="30dp"
        android:text="单位 : g"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/awc_weight_edit"
        android:inputType="number"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:hint="输入重量，单位g ( 进入校准时可不输 )"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/awc_weight_btn"
        android:text="开始重量校准"
        android:layout_margin="20dp"
        style="@style/themeButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>
</LinearLayout>